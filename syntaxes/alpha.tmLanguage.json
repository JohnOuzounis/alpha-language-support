{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "alpha",
	"patterns": [
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#identifier"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuations"
		}
	],
	"repository": {
		"identifier": {
			"patterns": [
				{
					"name": "variable",
					"match": "([a-zA-Z_][a-zA-Z0-9_]*)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "([0-9]+\\.[0-9]+)"
				},
				{
					"name": "constant.numeric",
					"match": "([0-9]+)"
				},
				{
					"name": "storage.type",
					"match": "\\b(true|false|nil)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.alpha",
					"match": "\\b(if|else|while|for|return|break|continue)\\b"
				},
				{
					"name": "keyword",
					"match": "\\b(function|local)\\b"
				},
				{
					"name": "keyword.operator",
					"match": "\\b(and|or|not)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.alpha",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.alpha",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment",
			"patterns": [
				{
					"name": "comment.line",
					"match": "//.*\\n"
				},
				{
					"include": "#comment-block"
				}
			]
		},
		"comment-block": {
			"begin": "/\\*",
			"captures": {
				"0": {
					"name": "comment.block"
				}
			},
			"end": "\\*/",
			"patterns": [
				{
					"include": "#comment-block"
				}
			],
			"name": "comment.block"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "(\\+|\\-|=|/|\\*|%|==|!=|\\+\\+|\\-\\-|>=|<=|>|<)"
				}
			]
		},
		"punctuations": {
			"patterns": [
				{
					"name": "punctuation",
					"match": "(\\{|\\}|\\(|\\)|\\[|\\]|;|,|:|::|\\.|\\.\\.)"
				}
			]
		}
	},
	"scopeName": "source.al"
}